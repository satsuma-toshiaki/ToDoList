<br>
<%= link_to 'カテゴリー登録', new_category_path %>
　 
<p id="notice"><%= notice %></p>
<font size="5" color="blue">カテゴリー一覧</font>
<br><br>

<table style="background-color: peru">
  <thead>
    <tr>
      <th><font size="4">カテゴリー名</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="background-color: aquamarine">
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= link_to '詳細', category %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
